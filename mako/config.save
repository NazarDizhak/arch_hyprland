sort=-time
layer=overlay
background-color=#2e3440
width=300
height=110
border-size=2
border-color=#88c0d0
border-radius=15
icons=0
max-icon-size=64
default-timeout=5000
ignore-timeout=1
font=monospace 14
group-by=category

[urgency=low]
border-color=#cccccc

[urgency=normal]

[urgency=high]
border-color=#bf616a
default-timeout=0

[category=system]
format=<b>%s</b>\n%b

[category=system][summary~=^Volume]
progress-color=source #89b4fa

[category=system][summary~=^VolumeBoosted]
progress-color=source #eba0ac
